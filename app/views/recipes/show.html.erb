<h2><%= @recipe.title %></h2>
<p><%= @recipe.ingredients %></p>
<span id='author'>Created by <%= @recipe.user.email if @recipe.user %></span>


<ul id='directions'>
  <% @recipe.directions.each do |direction| %>
    <li>
      #<%= direction.step_number %>:
      <%= link_to simple_format(direction.description), [@recipe, direction] %>
    </li>
  <% end %>
</ul>

<%= link_to "Edit Recipe", edit_recipe_path(@recipe) %> |
<%= link_to "Delete Recipe", recipe_path(@recipe),
    method: :delete,
    data: { confirm: "Are you sure you want to delete this recipe?" } %> |
<%= link_to "New Direction", new_recipe_direction_path(@recipe) %> |
<%= link_to "Back to All Recipes", recipes_path %>
